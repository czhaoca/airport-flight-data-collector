# Airport Flight Data Collector Environment Configuration
# Copy this file to .env and update with your values

# ====================
# Core Configuration
# ====================

# Environment: development or production
NODE_ENV=development

# Database provider: local, cloudflare, or oci
DATABASE_TYPE=local

# HTTP client type: fetch, curl, or puppeteer
HTTP_CLIENT_TYPE=fetch

# HTTP request timeout in milliseconds
HTTP_TIMEOUT=30000

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# ====================
# Cloudflare D1 Configuration
# ====================
# Required if DATABASE_TYPE=cloudflare

# Your Cloudflare account ID
CLOUDFLARE_ACCOUNT_ID=

# Your D1 database ID
CLOUDFLARE_DATABASE_ID=

# Your Cloudflare API token with D1 permissions
CLOUDFLARE_D1_TOKEN=

# ====================
# Oracle Cloud Configuration
# ====================
# Required if DATABASE_TYPE=oci

# Oracle Cloud Infrastructure OCIDs
OCI_TENANCY_OCID=
OCI_USER_OCID=
OCI_COMPARTMENT_ID=

# Oracle API key fingerprint
OCI_FINGERPRINT=

# Base64 encoded private key (or path to key file)
OCI_PRIVATE_KEY=

# Oracle region (e.g., us-ashburn-1)
OCI_REGION=

# Oracle Autonomous Database credentials
OCI_DB_USER=
OCI_DB_PASSWORD=
OCI_DB_CONNECTION_STRING=

# ====================
# API Server Configuration
# ====================

# API server port
PORT=3001

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=

# ====================
# Dashboard Configuration
# ====================

# Public API URL for dashboard
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v2

# ====================
# Monitoring Configuration
# ====================

# Enable metrics collection
ENABLE_METRICS=true

# Prometheus metrics port
METRICS_PORT=9091

# ====================
# Redis Configuration (for Docker)
# ====================

# Redis connection URL
REDIS_URL=redis://redis:6379

# ====================
# Logging Configuration
# ====================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# ====================
# Data Collection Settings
# ====================

# Airports to collect (comma-separated: sfo,yyz,yvr or all)
AIRPORTS=all

# Collection schedule (cron format)
COLLECTION_SCHEDULE=0 6 * * *

# ====================
# Data Retention Settings
# ====================

# Days to keep data before archiving
RETENTION_DAYS=90

# Archive location
ARCHIVE_PATH=./archive

# ====================
# Webhook Configuration
# ====================

# Webhook URL for notifications
WEBHOOK_URL=

# Webhook events (comma-separated: collection_complete,error,warning)
WEBHOOK_EVENTS=error

# ====================
# Security Settings
# ====================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API key for external access (optional)
API_KEY=

# ====================
# Performance Tuning
# ====================

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Request queue size
REQUEST_QUEUE_SIZE=100

# Worker threads for processing
WORKER_THREADS=4